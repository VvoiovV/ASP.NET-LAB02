@model Product_WebApplication2.Models.Product

<h1>Create Product</h1>
<form asp-action="Create">
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Price:</label>
        <input asp-for="Price" />
    </div>
    <div>
        <label>Category:</label>
        <input asp-for="Category" />
    </div>
    <div>
        <label>Expiration Date:</label>
